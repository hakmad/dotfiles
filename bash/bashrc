#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls="ls --color=auto -v"
alias du="du -h"
alias df="df -h"
alias tree="tree -v"
alias term="alacritty"
alias term-floating="alacritty --class floating,floating"
alias ssh="TERM=xterm-256color ssh"

PS1="> "
PS2="? "
PS3="# "
PS4="! "
